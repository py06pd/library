<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>Welcome!</title>      
        <link rel="stylesheet" href="{{ asset("css/base.css") }}" />
    </head>
    <body>
        <div id="app">
            <span data="{{ data }}"/>
            <div id="content">
                <div class="MenuContent">
                    <cic-menu v-if="$root.user.id > 0" v-model="page"></cic-menu>
                    <cic-login></cic-login>
                </div>
                <div class="PageContent">
                    <div v-if="page === 'books'">
                        <cic-book-list></cic-book-list>
                    </div>
                    <div v-if="page === 'lending'">
                        <cic-lending-list></cic-lending-list>
                    </div>
                    <div v-if="page === 'users'">
                        <cic-user-list></cic-user-list>
                    </div>
                    <div v-if="page === 'wishlist'">
                        <cic-wishlist :books="params.books" :userid="params.userid"></cic-wishlist>
                    </div>
                </div>
            </div>
        </div>
        <script type="text/javascript" src="{{ asset("js/main.js") }}"></script>
    </body>
</html>
